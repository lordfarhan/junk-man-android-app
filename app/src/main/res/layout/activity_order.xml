<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.scan.OrderActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
      android:id="@+id/cv_order"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:cardCornerRadius="6dp"
      app:cardElevation="3dp">

      <ImageView
        android:id="@+id/img_stuff_order"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="@string/app_intro_image_content_description" />
    </androidx.cardview.widget.CardView>

    <TextView
      android:id="@+id/name_stuff"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="@string/txt_name_user"
      android:textStyle="bold"
      android:textSize="18sp"
      android:textAlignment="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/cv_order"/>

    <TextView
      android:id="@+id/input_name_stuff"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:text="@string/name_stuff_doesnt_match"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/name_stuff"/>

    <EditText
      android:id="@+id/txt_name_stuff"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text"
      android:imeOptions="actionDone"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:textSize="16sp"
      android:autofillHints="Masukkan Nama Barang"
      android:labelFor="@id/txt_name_stuff"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/input_name_stuff"/>

    <TableLayout
      android:id="@+id/table_transaction"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteX="16dp"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/txt_name_stuff">

      <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
          android:id="@+id/price_stuff_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:text="@string/price_stuff_info"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/equal_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:layout_marginStart="10dp"
          android:text="@string/equal"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/txt_price_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:text="@string/amount_trans_50"
          android:textAlignment="textEnd"
          android:textSize="16sp" />
      </TableRow>

      <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
          android:id="@+id/weight_predict"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:text="@string/weight_predict"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/equal_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:layout_marginStart="10dp"
          android:text="@string/equal"
          android:textSize="16sp"/>

        <EditText
          android:id="@+id/txt_weight_stuff_predict"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:inputType = "number"
          android:textAlignment="textEnd"
          android:textSize="16sp"
          android:labelFor="@id/txt_weight_stuff_predict"
          android:autofillHints="Berapa Kg?" />

        <TextView
          android:id="@+id/kg_stuff"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:layout_marginStart="10dp"
          android:text="@string/kg"
          android:textSize="16sp"/>
      </TableRow>

      <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
          android:id="@+id/est_price"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:text="@string/est_price"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/equal_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:layout_marginStart="10dp"
          android:text="@string/equal"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/txt_est_price"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:text="@string/amount_trans_50"
          android:textAlignment="textEnd"
          android:textSize="16sp" />
      </TableRow>
    </TableLayout>

    <Button
      android:id="@+id/btn_order_junkman"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginTop="50dp"
      android:text="@string/order"
      android:backgroundTint="@color/green_500"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/table_transaction"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>