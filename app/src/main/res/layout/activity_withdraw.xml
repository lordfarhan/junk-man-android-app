<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.profile.withdraw.WithdrawActivity">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
      android:id="@+id/table_saldo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:layout_editor_absoluteX="16dp"
      android:layout_alignParentStart="true"
      android:background="@color/soft_grey">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
          android:id="@+id/saldo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="@string/saldo"
          android:textSize="20sp"
          android:textStyle="bold" />
      </TableRow>

      <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
          android:id="@+id/saldo_rp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="textStart"
          android:text="@string/price_stuff_rp"
          android:textSize="16sp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txt_saldo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="center"
          android:text="@string/txt_price_stuff"
          android:textSize="16sp"
          android:textStyle="bold" />
      </TableRow>
    </TableLayout>

    <TextView
      android:id="@+id/amount_trans"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/table_saldo"
      android:layout_marginTop="50dp"
      android:layout_marginStart="20dp"
      android:text="@string/amount_trans"
      android:textSize="16sp"
      android:textStyle="bold" />

    <TableLayout
      android:id="@+id/table_btn_trans"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/amount_trans"
      android:layout_alignParentStart="true"
      android:layout_marginTop="8dp">

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:ignore="UselessParent">

        <Button
          android:id="@+id/btn_trans_50"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/amount_trans_50"
          android:backgroundTint="@color/yellow_500"
          style="?android:attr/buttonBarButtonStyle" />

        <Button
          android:id="@+id/btn_trans_100"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="8dp"
          android:backgroundTint="@color/yellow_500"
          android:text="@string/amount_trans_100"
          style="?android:attr/buttonBarButtonStyle" />

        <Button
          android:id="@+id/btn_trans_200"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="8dp"
          android:backgroundTint="@color/yellow_500"
          android:text="@string/amount_trans_200"
          style="?android:attr/buttonBarButtonStyle" />
      </TableRow>
    </TableLayout>

    <TextView
      android:id="@+id/bank_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/table_btn_trans"
      android:layout_marginTop="50dp"
      android:layout_marginStart="20dp"
      android:text="@string/bank_name"
      android:textSize="16sp"
      android:textStyle="bold" />

    <EditText
      android:id="@+id/txt_bank_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text"
      android:imeOptions="actionDone"
      android:layout_below="@id/bank_name"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:textSize="16sp"
      android:autofillHints="@string/input_bank_name"
      android:labelFor="@id/txt_bank_name"/>

    <TextView
      android:id="@+id/bank_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txt_bank_name"
      android:layout_marginTop="20dp"
      android:layout_marginStart="20dp"
      android:text="@string/bank_number"
      android:textSize="16sp"
      android:textStyle="bold" />

    <EditText
      android:id="@+id/txt_bank_number"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:inputType="text"
      android:imeOptions="actionDone"
      android:layout_below="@id/bank_number"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:textSize="16sp"
      android:autofillHints="@string/input_bank_number"
      android:labelFor="@id/txt_bank_number"
      tools:ignore="TextFields" />

    <Button
      android:id="@+id/btn_send"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/txt_bank_number"
      android:layout_marginTop="50dp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:text="@string/send"
      android:backgroundTint="@color/green_500"/>
  </RelativeLayout>

</ScrollView>